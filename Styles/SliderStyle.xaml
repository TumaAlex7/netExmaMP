<Style TargetType="Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Styles"
             mc:Ignorable="d">
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="IsMoveToPointEnabled" Value="True"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Slider">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Name="TrackBackground" Height="6" RadiusX="3" RadiusY="3" Fill="#D3D3D3" Margin="0,4,0,4" Grid.ColumnSpan="2"/>

                    <Rectangle Grid.Row="0" Name="Track" Height="6" RadiusX="3" RadiusY="3" Margin="0,4,0,4" Width="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SliderValueToWidthConverter}}">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="LightBlue"/>
                        </Rectangle.Fill>

                    </Rectangle>

                    <Rectangle Grid.Row="0" Height="6" RadiusX="3" RadiusY="3"  Margin="0,4,0,4" Grid.ColumnSpan="2">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="Gray"/>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Thumb x:Name="HorizontalThumb" Grid.Row="0" Width="14" Height="14" Cursor="Hand" Margin="93,0,33,0">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Grid Width="14" Height="14">
                                    <Ellipse Fill="White" Stroke="Gray" StrokeThickness="2"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter TargetName="TrackBackground" Property="Fill" Value="#CCCCCC"/>
                        <Setter TargetName="Track" Property="Visibility" Value="Collapsed"/>
                        <Setter TargetName="HorizontalThumb" Property="Background" Value="#E0E0E0"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>


</Style>
